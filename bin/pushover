#!/bin/bash

USER=""
TOKEN=""
TITLE=""
MESSAGE=""
HTML=""
PRIORITY="0"
RETRY="60"
EXPIRE="86400"
ERROR=false
VERSION="1.0.3"

usage() {
	echo "
Usage:
	pushover [options]
Options:
	--user 			Pushover user key. REQUIRED.
	--token 		Pushover application API token. REQUIRED.
	--title 		Notification title.
	--message 		Notification message. REQUIRED.
	--html 			Enabled HTML message. Set to 1 to enable. See: https://pushover.net/api#html.
	--priority 		Message priority, see: https://pushover.net/api#priority. DEFAULT = $PRIORITY.
	--retry 		How many seconds between retries. Only applies when --priority is set to 2 (emergency). DEFAULT = $RETRY.
	--expire 		How many seconds until emergency notification retries will stop. Only applies when --priority is set to 2 (emergency). DEFAULT = $EXPIRE.
	--configure 	Configure global Pushover user key and application API token.
	--upgrade 		Upgrade to the latest version of Pushover CLI.
	--version		Currently installed version of Pushover CLI.
	--help 			Usage instructions.
Example:
	pushover \\
	--user YOUR_USER_KEY \\
	--token YOUR_APP_TOKEN \\
	--title \"Test Notification\" \\
	--message \"Here is the notification!\"
	"
}
upgrade() {
	DIR_TEMP=/opt/pushover-cli
	git clone git@github.com:aaronfagan/pushover-cli.git $DIR_TEMP > /dev/null
	if [ $? != 0 ];
	then 
		find $DIR_TEMP -type f -name "upgrade.sh" -exec chmod +x {} \; -exec bash {} \;
		rm -rf $DIR_TEMP
		exit 0
	else
		rm -rf $DIR_TEMP
		echo -ne '\033[0;37m'
		echo -ne "\nPushover CLI upgraded failed.\n\n"
		echo -ne '\033[0m'
		exit 1
	fi
}
configure() {
	echo -ne '\033[0;37m'
	if [ -e $HOME/.pushover/config ]
	then
	    USER_KEY=$(awk -F'"' '/^USER_KEY=/ {print $2}' /root/.pushover/config)
	    APP_TOKEN=$(awk -F'"' '/^APP_TOKEN=/ {print $2}' $HOME/.pushover/config)
	    echo -ne "\nPushover User Key ($USER_KEY_CUR): "
		read USER_KEY
		echo -ne "Pushover Application API Token ($APP_TOKEN: "
		read APP_TOKEN
	else
		echo -ne "\nPushover User Key: "
		read USER_KEY
		echo -ne "Pushover Application API Token: "
		read APP_TOKEN
		if [ ! -d $HOME/.pushover ]; then mkdir $HOME/.pushover; fi
		if [ -e $HOME/.pushover/config ]; then touch $HOME/.pushover/config; fi
	fi
	cat <<EOF > $HOME/.pushover/config
USER_KEY="$USER_KEY"
APP_TOKEN="$APP_TOKEN"
EOF
	chmod 755 $HOME/.pushover/config
	echo -ne "\nPushover CLI configured successfully.\n\n"
	echo -ne '\033[0m'
}

while [[ $# -gt 0 ]]
do
	key="$1"
	case $key in
		--token)
			TOKEN="${2:-$TOKEN}"
			shift
			shift
		;;
		--user)
			USER="${2:-$USER}"
			shift
			shift
		;;
		--title)
			TITLE="${2:-$TITLE}"
			shift
			shift
		;;
		--message)
			MESSAGE="${2:-$MESSAGE}"
			shift
			shift
		;;
		--html)
			HTML="${2:-$HTML}"
			shift
			shift
		;;
		--priority)
			PRIORITY="${2:-$PRIORITY}"
			shift
			shift
		;;
		--retry)
			RETRY="${2:-$RETRY}"
			shift
			shift
		;;
		--expire)
			EXPIRE="${2:-$EXPIRE}"
			shift
			shift
		;;
		--configure)
			configure
			exit 0
		;;
		--upgrade)
			upgrade
		;;
		-v | --version)
			echo -ne "\033[0;37m\nPushover CLI - v$VERSION\033[0m\n"
			echo -ne "\033[0;37mBy Aaron Fagan (https://www.aaronfagan.ca/)\033[0m\n\n"
			exit 0
		;;
		--help)
			usage
			exit 0
		;;
		*) 
			INVALID+=("$1")
			shift
			echo -ne "\033[0;31m\nERROR:\033[0;37m Invalid arguement: $INVALID\033[0m\n"
			usage
			exit 1
		;;
	esac
done

if [ -z "$USER" ] || [ -z "$TOKEN" ] || [ -z "$MESSAGE" ]
then
	echo -ne '\n'
	if [ -z "$USER" ]; then echo -ne "\033[0;31mERROR:\033[0;37m --user arguement is required.\033[0m\n"; fi
	if [ -z "$TOKEN" ]; then echo -ne "\033[0;31mERROR:\033[0;37m --token arguement is required.\033[0m\n"; fi
	if [ -z "$MESSAGE" ]; then echo -ne "\033[0;31mERROR:\033[0;37m --message arguement is required.\033[0m\n"; fi
	usage
	exit 1
else
	echo -ne '\033[0;37m'
	echo -ne "\n> Sending notification..."
	/usr/bin/curl -s \
		-F "token=${TOKEN}" \
		-F "user=${USER}" \
		-F "title=${TITLE}" \
		-F "priority=${PRIORITY}" \
		-F "retry=${RETRY}" \
		-F "expire=${EXPIRE}" \
		-F "message=${MESSAGE}" \
		https://api.pushover.net/1/messages.json \
	| grep 'errors' > /dev/null 2>&1
	if [ $? != 0 ];
	then 
		echo -ne "success!\n\n";
		echo -ne '\033[0m'
		exit 0
	else
		echo -ne "failed!\n\n";
		echo -ne '\033[0m'
		exit 1;
	fi
fi
